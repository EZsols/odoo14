<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="visa_category_form_view" model="ir.ui.view">
        <field name="name">hr.employee.visa.category.form</field>
        <field name="model">hr.employee.visa.category</field>
        <field name="arch" type="xml">
            <form string="Embassy Details">
                <sheet>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="name" default_focus="1" placeholder="Title"/>
                        </h1>
                    </div>
                    <notebook>
                        <page name="description_page" string="Letter Body">
                            <field name="description" type="html"/>
                            <div class="d-none oe_clear"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="visa_category_tree_view" model="ir.ui.view">
        <field name="name">hr.employee.visa.category.tree</field>
        <field name="model">hr.employee.visa.category</field>
        <field name="arch" type="xml">
            <tree string="Category Details">
                <field name="name" />
            </tree>
        </field>
    </record>

    <record id="action_category_details_view" model="ir.actions.act_window">
        <field name="name">Category</field>
        <field name="res_model">hr.employee.visa.category</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create Category Records...
            </p>
        </field>
    </record>

    <menuitem id="action_category_details_menu" name="Categories" parent="fl_employee_visa.hr_visa_menu_label"
              action="fl_employee_visa.action_category_details_view" groups="fl_employee_visa.group_visa_hr"
              sequence="202" />
</odoo>